<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:id="detailPanel"
           styleClass="pane-with-border">
    <VBox fx:id="detailPanelVBox">
        <Label fx:id="name" style="-fx-font-size: 48;"/>
        <Label fx:id="id"/>
        <Label fx:id="phone"/>
        <Label fx:id="address"/>
        <Label fx:id="email"/>
        <Label fx:id="role"/>
        <Label fx:id="major"/>
        <HBox alignment="CENTER_LEFT">
            <Label fx:id="tagStart" minWidth="73"/>
            <!-- MUST KEEP minWidth ABOVE TO 73 -->
            <FlowPane fx:id="tagDetails"/>
        </HBox>
        <Label fx:id="meetings" wrapText="true"/>
    </VBox>

</StackPane>
